<!-- Simple cart-pole (inverted pendulum) for simforge sample assets -->
<mujoco model="cart_pole">
  <compiler angle="radian"/>

  <default>
    <joint damping="0.05"/>
    <geom rgba="0.6 0.6 0.8 1"/>
  </default>

  <worldbody>
    <!-- Rail (visual only) -->
    <geom name="rail" type="capsule" fromto="-2.4 0 0  2.4 0 0"
          size="0.01" rgba="0.3 0.3 0.3 1" contype="0" conaffinity="0"/>

    <!-- Cart -->
    <body name="cart" pos="0 0 0">
      <joint name="slider" type="slide" axis="1 0 0" range="-2.4 2.4"/>
      <geom name="cart_geom" type="box" size="0.2 0.1 0.05" mass="1.0"/>

      <!-- Pole -->
      <body name="pole" pos="0 0 0.05">
        <joint name="hinge" type="hinge" axis="0 1 0" range="-1.57 1.57"/>
        <geom name="pole_geom" type="capsule" fromto="0 0 0  0 0 0.5"
              size="0.02" mass="0.1" rgba="0.9 0.2 0.2 1"/>
      </body>
    </body>
  </worldbody>

  <actuator>
    <force name="slide_force" joint="slider" ctrlrange="-100 100"/>
  </actuator>
</mujoco>
